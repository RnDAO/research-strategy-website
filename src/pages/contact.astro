---
import { Icon } from 'astro-icon'
import Base from '../layouts/base.astro'
import PageHero from '../components/pagehero.astro'
import { SiteMetadata } from '../config'

const frontmatter = {
  title: 'Contact',
  description:
    'Our presence is real and digital. Contact us through the following services.',
  coverSVG: '../svg/headers/page-header.svg',
  socialImage: '../images/social.png',
  publishDate: SiteMetadata.buildTime,
}
---

<Base frontmatter={frontmatter}>
  <header>
    <PageHero
      title={frontmatter.title}
      description={frontmatter.description}
      coverSVG={frontmatter.coverSVG}
      socialImage={frontmatter.socialImage}
    />
  </header>
  <main>
    <section class="mb-0 text-zinc-900 dark:text-zinc-100 mx-auto max-w-7xl">
      <div class="block bg-zinc-50 dark:bg-zinc-700 my-5 lg:my-8 rounded-t-xl overflow-hidden">
        <div class="flex flex-wrap items-center py-10">

          <div class="h-auto lg:w-6/12 xl:w-8/12">
            <div class="flex flex-wrap pt-8 lg:pt-0">
              {
                SiteMetadata.social.map(
                  method =>
                    method.link && (
                      <div class="mb-12 grow-0 shrink-0 basis-auto w-full md:w-6/12 lg:w-full xl:w-6/12 px-3 md:px-6 xl:px-12">
                        <div class="flex items-start">
                          <div class="shrink-0">
                            <Icon
                              pack="bi"
                              name={method.icon}
                              class="p-4 bg-zinc-600 text-white rounded-md shadow-md w-14 h-14 flex items-center justify-center"
                            />
                          </div>
                          <div class="grow ml-6">
                            <p class="font-bold mb-1">{method.name}</p>
                            <p>
                              {' '}
                              <a
                                href={method.link}
                                class="text-sm text-zinc-600 hover:text-accent1 dark:text-zinc-300 dark:hover:text-accent2"
                              >
                                {method.link}
                              </a>
                            </p>
                          </div>
                        </div>
                      </div>
                    )
                )
              }
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Base>
