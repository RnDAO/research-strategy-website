---
export interface Props {
  categories?: string[]
}

const { categories } = Astro.props
---
{categories &&
  <div class="flex flex-row flex-wrap items-start gap-2 pb-2">
    {
      categories.map(category => (
        <a
          href={`${import.meta.env.BASE_URL}category/${encodeURIComponent(category)}/`}
          class="inline-block py-1 px-3 rounded bg-zinc-600 hover:bg-zinc-300 text-white hover:text-zinc-600 text-xs font-medium tracking-tight uppercase"
        >
          {category}
          <span class="sr-only">category</span>
        </a>
      ))
    }
  </div>
}
