---
import type { Frontmatter } from '../config'
import Base from '../layouts/base.astro'
import PageHero from '../components/pagehero.astro'
export interface Props {
  frontmatter: Frontmatter
}

const { frontmatter } = Astro.props
---

<Base frontmatter={frontmatter}>
  <main class="dark:bg-zinc-900">
    <article class="post min-h-screen">
      <header>
        <PageHero
          title={frontmatter.title}
          description={frontmatter.description}
          coverSVG={frontmatter.coverSVG}
          socialImage={frontmatter.socialImage}
        />
      </header>
      <section
        class="px-4 pb-10 lg:pb-16 lg:px-0 lg:mt-10 max-w-screen-lg mx-auto prose prose-zinc lg:prose-xl dark:prose-invert overflow-x-hidden"
      >
        <slot />
      </section>
    </article>
  </main>
</Base>
